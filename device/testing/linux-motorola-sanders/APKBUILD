# Reference: <https://postmarketos.org/vendorkernel>
# Kernel config based on: arch/arm64/configs/(CHANGEME!)

pkgname=linux-motorola-sanders
pkgver=3.18.140
pkgrel=0
pkgdesc="Motorola Moto G5s Plus kernel fork"
arch="aarch64"
_carch="arm64"
_flavor="motorola-sanders"
url="https://lineageos.org/"
license="GPL-2.0-only"
options="!strip !check !tracedeps pmb:cross-native"

# bash: some kernel files require a shell
# devicepkg-dev: to build a pmos pkg
# dtbtool: to create the qcdt image
# openssl-dev: to extract certs from the kernel
# perl: to parse assembly (.S) files
makedepends="
	bash
	devicepkg-dev
	dtbtool
	openssl-dev
	perl
"

# Source
_repository="android_kernel_motorola_msm8953"
_commit="lineage-18.1"
_config="config-$_flavor.$arch"
source="
	$pkgname-$_commit.tar.gz::https://github.com/LineageOS/$_repository/archive/$_commit.tar.gz
	$_config
"
builddir="$srcdir/$_repository-$_commit"
_outdir="out"

prepare() {
	default_prepare
	. downstreamkernel_prepare
}

build() {
	unset LDFLAGS
	make O="$_outdir" ARCH="$_carch" CC="${CC:-gcc}" KBUILD_BUILD_VERSION="$((pkgrel + 1 ))-postmarketOS"

	# Compile all .dtb files into dt.img for QCDT image
	dtbTool -o "$_outdir/arch/$_carch/boot"/dt.img "$_outdir/arch/$_carch/boot/"
}

package() {
	# Need to figure out why the Image.gz isn't detected, but for now set it manually (30.1MB -> 13.3MB)
	KERNEL_IMAGE_NAME="Image.gz" \
	downstreamkernel_package "$builddir" "$pkgdir" "$_carch" "$_flavor" "$_outdir"

	# Place dt.img in boot partition where QCDT can find it
	install -Dm644 "$_outdir/arch/$_carch/boot"/dt.img "$pkgdir"/boot/dt.img
}

sha512sums="
5c069d193ca75340f36f66672dcadd168eddec7b96ad834c736edb9a7ccdaff19364376e326681c27449447dcf5493a204442a89d07d4745cfc1fde6d94289de  linux-motorola-sanders-lineage-18.1.tar.gz
e86b1bca01ce6089dafd223c00b56f22f4cc9de8bdc87eeab0701bfc552368ba9588f291bc7789baaac05d58fdda46174205a67b2687b35380178944e9424986  config-motorola-sanders.aarch64
"
